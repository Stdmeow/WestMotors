@model WestMotorsApp.Models.Deal

@{
    ViewData["Title"] = "Редактировать Сделку";
}

<h1>Редактировать Сделку</h1>

<h4>Сделка</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="SellerId" /> @* SellerId не должен меняться при редактировании, если логика это предполагает *@

            <div class="form-group">
                <label asp-for="BuyerId" class="control-label"></label>
                <select asp-for="BuyerId" class="form-control" asp-items="ViewBag.BuyerId"></select>
                <span asp-validation-for="BuyerId" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="CarId" class="control-label"></label>
                <select asp-for="CarId" class="form-control" asp-items="ViewBag.CarId"></select>
                <span asp-validation-for="CarId" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="DealDate" class="control-label"></label>
                <input asp-for="DealDate" class="form-control" type="date" />
                <span asp-validation-for="DealDate" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="FinalCost" class="control-label"></label>
                <input asp-for="FinalCost" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="FinalCost" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="PaymentMethod" class="control-label"></label>
                <input asp-for="PaymentMethod" class="form-control" />
                <span asp-validation-for="PaymentMethod" class="text-danger"></span>
            </div>
            <div class="form-group mt-4">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-link">Вернуться к списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}